---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "class"    : "{{ post.class }}",
      "url"      : "{{ site.baseurl }}{{ post.permalink }}",
      "date"     : "{{ post.date }}",
      "auther"   : "{{ post.auther }}",
      "email"    : "{{ post.email }}",
      "hot"      : "{{ post.hot }}"
    } {% unless forloop.last %}, {% endunless %}
  {% endfor %}
]
